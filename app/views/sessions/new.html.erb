<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br />
  <br />

  <%= f.label :password %>
  <%= f.password_field :password %>

  <br />
  <br />

  <%= f.submit "log in" %>

  <br />
  <br />

  <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
  
<% end %>
 